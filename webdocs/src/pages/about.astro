---
import { Image } from 'astro:assets';
import '../styles/custom.css'
import logo_large from '../assets/landing-logo-large.svg'
import logo_small from '../assets/landing-logo-small.svg'
import art1 from '../assets/art_1_v2_dark.png'
---
<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="shortcut icon" href="/favicon.ico" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <meta name="apple-mobile-web-app-title" content="x64" />
  <link rel="manifest" href="/site.webmanifest" />

  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>x86-64 playground | About</title>

  <meta name="description" content="An online assembly editor and debugger for the x86-64 architecture. The quickest way to run, debug, and share assembly snippets for a wide range of amd64 assemblers - GNU binutils, Fasm, Nasm" />
  <meta name="keywords" content="Gdb, x86-64, x64, CTF, assembly, debugger, Fasm, Binutils, webassembly, wasm binutils, wasm assembler" />
  <meta name="author" content="https://halb.it" />
  <link rel="canonical" href="https://x64.halb.it/about" />
  <meta name="robots" content="index, follow" />

  <meta property="og:title" content="X86-64 playground" />
  <meta property="og:description" content="An online assembly editor and debugger for the x86-64 architecture. The quickest way to run, debug, and share assembly snippets for a wide range of amd64 assemblers - GNU binutils, Fasm, Nasm" />
  <meta property="og:image" content="https://x64.halb.it/card.jpg" />
  <meta content="1762" property="og:image:width">
  <meta content="1068" property="og:image:height">
  <meta property="og:url" content="https://x64.halb.it/" />
  <meta property="twitter:card" content="https://x64.halb.it/card.jpg" />
  <meta property="og:site_name" content="X86-64 playground" />
  <meta property="twitter:image:alt" content="X86-64 playground" />

</head>
<body>
<header>
  <div class="container">
    <div class="logo">
      <picture>
        <source media="(max-width: 350px)" sizes="1px" srcset="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7 1w"/>
        <source media="(min-width: 500px)" width="258" height="67" srcset={logo_large.src}/>
        <img src={logo_small.src} width="67", height="67"/>
      </picture>
      <span class="visually-hidden" translate="no" >
        x86-64 Playground
      </span>
    </div>
    <nav>
      <a href="/">Run</a>
      <a href="/getting-started/">Guides</a>
      <a href="https://github.com/robalb/x86-64-playground" class="icon">
        <svg aria-hidden="true" height="23" width="23" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 113 114" xml:space="preserve">
          <path id="svgstar" fill="#FDB54A" d="M65.2 98.5c-.3 7.3-2.4 11-6.6 11.5-3.9.5-6.9-3-8.7-9.2-1.7-5.8-3-12-6-17.1A34.6 34.6 0 0 0 16.7 67C9.5 66.2 7 64 7 58.1c0-3.9 2.5-5 5.3-6 6.1-2.1 12.4-3.7 18.3-6.1 11.1-4.6 16-14 18.5-25.1.6-3 1.2-6 2-9 1.1-3.8 4.5-4.9 7.4-3.7 2.6 1.1 6 3.9 6.3 6.2C67.7 36.3 78.3 47.1 99 51c7.7 1.4 10.5 3.4 10.1 8.1-.4 4.6-5 7.7-11.3 8-6.7.1-12.3 3-17.2 7a40.8 40.8 0 0 0-15.3 24.4z"/>
        </svg>
        Star on GitHub
      </a>
    </nav>
  </div>
</header>


<div class="hero">
  <Image src={art1} alt="Logo art" aria-hidden="true" />

  <h1>x86-64 Playground</h1>
  <h2>An online assembly editor and GDB-like debugger</h2>
</div>


<style>
  .hero{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    width: 100%;
    padding: 1rem;
  }
  .hero img{
    max-width: 20rem;
    height: auto;
  }
  h1{
    color: var(--theme-primary);
    font-size: 3.5rem;
    line-height: 3rem;
    text-align: center;
    margin: .5rem;
    margin-top: 0;
    font-family: 'Neuton';
  }
  h2{
    color: var(--color-gray-100);
    text-align: center;
    line-height: 1.8rem;
    font-size: 1.3rem;
    font-family: 'Inter';
    font-weight:400;
  }

  @media screen and (min-width: 600px){
    h1{
      font-size: 3.5rem;
      line-height: 3.5rem;
    }
    h2{
      line-height: 1.8rem;
      font-size: 1.3rem;
    }
  }

</style>
</body>
</html>
