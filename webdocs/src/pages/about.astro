---
import { Image } from 'astro:assets';
import '../styles/custom.css'
import logo1 from '../assets/dark-logo.svg'
import star from '../assets/star.svg'
import art1 from '../assets/art_1_v2_dark.png'
---

<header>
  <div class="container">
    <div class="logo">
      <img src={logo1.src} width="258", height="67"/>
      <span class="visually-hidden" translate="no" >
        x86-64 Playground
      </span>
    </div>
    <nav>
      <a href="/">Run</a>
      <a href="/getting-started/">Guides</a>
      <a href="https://github.com/robalb/x86-64-playground" class="icon">
          <img src={star.src} aria-hidden="true" />
            Star on GitHub
      </a>
    </nav>
  </div>
</header>

<div class="hero">
  <Image src={art1} alt="aa" />
  <h1>x86-64 Playground</h1>
  <h2>An assembly editor and GDB-like debugger for the web</h2>
</div>


<style>
  .hero{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    width: 100%
    padding: 1rem;
  }
  .hero img{
    max-width: 20rem;
    height: auto;
  }
  h1{
    color: var(--theme-primary);
    font-size: 4rem;
    line-height: 3.5rem;
    margin: 0;
    text-align: center;

    font-family: 'Neuton';
  }
  h2{
    color: var(--color-gray-100);
    text-align: center;
    line-height: 1.8rem;
    font-size: 1.5rem;
    font-family: 'Inter';
    font-weight:400;
  }

</style>
